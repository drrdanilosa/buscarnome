{
  "manifest_version": 2,
  "name": "DeepAlias Hunter Pro (Enhanced) - Edge",
  "version": "4.0.0",
  "description": "Extensão OSINT aprimorada para busca multiplataforma de aliases, com foco em segurança e privacidade. Otimizada para Microsoft Edge.",
  
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "32": "src/assets/icons/icon32.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },
  
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "DeepAlias Hunter Pro",
    "default_icon": {
      "16": "src/assets/icons/icon16.png",
      "32": "src/assets/icons/icon32.png",
      "48": "src/assets/icons/icon48.png",
      "128": "src/assets/icons/icon128.png"
    }
  },
  
  "background": {
    "scripts": ["src/background/background_simple.js"],
    "persistent": false
  },
  
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  
  "content_security_policy": "script-src 'self'; object-src 'none';",
  
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "notifications",
    "webRequest",
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content_scripts/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "web_accessible_resources": ["src/assets/*"]
}
